<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Books - Book Review System</title>
    <link rel="stylesheet" href="/css/mybooks.css">
</head>
<body>
    <!-- My Books Table -->
    <div class="my-books-container">
        <h2>My Books</h2>
        <table>
            <thead>
                <tr>
                    <th>Book Name</th>
                    <th>Author</th>
                    <th>Rating</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% books.forEach(book => { %>
                    <tr>
                        <td>
                            <a href="/book-details/<%= encodeURIComponent(book.title) %>">
                                <%= book.title %>
                            </a>
                        </td>
                        <td><%= book.author %></td>
                        <td><%= book.rating ? book.rating.toFixed(2) : "No ratings yet" %></td>
                        <td>
                            <!-- Delete action -->
                            <form action="/delete-book" method="POST" style="display:inline;">
                                <input type="hidden" name="bookName" value="<%= book.title %>">
                                <button type="submit" class="delete-btn">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <a href="/publish" class="publish-btn">Publish New Book</a>
    <br>
    <a href="/home" class="back-button">Back to Home</a>

</body>
</html>
